<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xwiki.workflow-publication</groupId>
    <artifactId>application-workflow-publication</artifactId>
    <version>1.8-SNAPSHOT</version>
  </parent>
  <artifactId>application-workflow-publication-ui</artifactId>
  <name>Publication Workflow Application (Pro)</name>
  <packaging>xar</packaging>
  <properties>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>Publication Workflow Application (Pro)</xwiki.extension.name>
    <!-- The list of documents that have an implicit unlimited free license. The users can view these documents without
      buying a license or getting a trial license, but they cannot edit or delete them. -->
    <xwiki.extension.licensing.publicDocuments>
      PublicationWorkflow.WebHome
    </xwiki.extension.licensing.publicDocuments>
    <!-- Don't run CLIRR here since there's no Java code. -->
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.xwiki.licensing</groupId>
      <artifactId>application-licensing-licensor-api</artifactId>
      <version>${licensing.version}</version>
    </dependency>
    <!-- Adding publication workflow api as dependencies since these pages need the 
      server in order to work properly and for EM to find them related. -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>application-workflow-publication-api</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>
